<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VemProChurras.PaginaRateio"
             BackgroundImage="a.jpg">
    <ContentPage.Content>

        <AbsoluteLayout>
            <BoxView Color="#f57b4a"
                     AbsoluteLayout.LayoutBounds="0.5,0.02,0.8,0.06"
                     AbsoluteLayout.LayoutFlags="All"
                     Opacity="0.85"/>

            <Label TextColor="White"
                   FontSize="18"
                   Text="R A T E I O"
                   AbsoluteLayout.LayoutBounds="0.5,0.028"
                   AbsoluteLayout.LayoutFlags="PositionProportional"
                   HorizontalTextAlignment="Center"/>

            <BoxView Color="White"
                     AbsoluteLayout.LayoutBounds="0.5,0.3,0.9,0.55"
                     AbsoluteLayout.LayoutFlags="All"
                     Opacity="0.8"/>

            <Entry x:Name="EntryRateio"
                Placeholder="Informe o número de pessoas pagantes: "
                AbsoluteLayout.LayoutBounds="0.5,0.4"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                   TextColor="#f57b4a"
                   PlaceholderColor="#f57b4a"
                   />


            <Button Text="C A L C U L A R "
                    BackgroundColor="#f57b4a"
                    BorderRadius="15"
                    TextColor="White"
                    AbsoluteLayout.LayoutBounds="0.5,0.5,0.4,0.06"
                    AbsoluteLayout.LayoutFlags="All"
                    Clicked="CalcularRateio"
                  />



            <BoxView x:Name="bxv_Rateio"
                     Color="White"
                     AbsoluteLayout.LayoutBounds="0.5,0.82,0.8,0.05"
                     AbsoluteLayout.LayoutFlags="All"
                     Opacity="0.85"
                     IsVisible="False"/>

            <Label x:Name="lbl_Titulo"
                    AbsoluteLayout.LayoutBounds="0.25,0.81"
                   AbsoluteLayout.LayoutFlags="PositionProportional"
                   TextColor="#f57b4a"
                   FontAttributes="Bold"/>


            <Label x:Name="lbl_Rateio" 
              
                   AbsoluteLayout.LayoutBounds="0.8,0.81"
                   AbsoluteLayout.LayoutFlags="PositionProportional"
                   TextColor="#f57b4a"
                   FontAttributes="Bold" />




            <Button Text="F I N A L I Z A R "
                    BackgroundColor="#f57b4a"
                    BorderRadius="15"
                    TextColor="White"
                    AbsoluteLayout.LayoutBounds="0.5,0.95,0.8,0.06"
                    AbsoluteLayout.LayoutFlags="All"
                    Clicked="Finalizar"
                   />


        </AbsoluteLayout>

    </ContentPage.Content>
</ContentPage>